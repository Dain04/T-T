@model DemoDB2.Models.NhanVien

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h3>Xác nhận xóa nhân viên</h3>
        </div>
        <div class="card-body">
            <h4 class="card-title">Bạn có chắc chắn muốn xóa nhân viên này?</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Ten)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Ten)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ChucVuID)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ChucVuID)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Luong)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Luong)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DiaChi)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DiaChi)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.SoDienThoai)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SoDienThoai)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
            </dl>

            @using (Html.BeginForm("DeleteNV", "LoginNhanVien", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.NhanVienID)
                <div class="form-actions no-color">
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                    @Html.ActionLink("Trở về danh sách", "ViewNV", "LoginNhanVien", null, new { @class = "btn btn-secondary ml-2" })
                </div>
            }
        </div>
    </div>
</div>