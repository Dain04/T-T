@model DemoDB2.Models.LichLamViec
@{
    ViewBag.Title = "Đăng Ký Lịch Làm Việc";
    Layout = "~/Views/Shared/_LayoutNV.cshtml";
}
<br />
<br />
<br />
<br />
<h2>Đăng Ký Lịch Làm Việc</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Thang, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Thang,
                    Enumerable.Range(1, 12).Select(i => new SelectListItem { Value = i.ToString(), Text = i.ToString() }),
                    "Chọn tháng", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Thang, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Nam, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Nam,
                    Enumerable.Range(DateTime.Now.Year, 10).Select(i => new SelectListItem { Value = i.ToString(), Text = i.ToString() }),
                    "Chọn năm", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Nam, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SoNgayLamViec, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoNgayLamViec, new { htmlAttributes = new { @class = "form-control", type = "number", min = "25", max = "30" } })
                @Html.ValidationMessageFor(model => model.SoNgayLamViec, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CaLamViec, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.CaLamViec, new SelectList(new[]
                {
                    new { Value = "1", Text = "Ca 1 (6:00 AM - 12:00 PM)" },
                    new { Value = "2", Text = "Ca 2 (12:00 PM - 6:00 PM)" },
                    new { Value = "3", Text = "Ca 3 (6:00 PM - 12:00 AM)" },
                    new { Value = "4", Text = "Ca 4 (12:00 AM - 6:00 AM)" }
                }, "Value", "Text"), "Chọn ca làm việc", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CaLamViec, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Đăng Ký" class="btn btn-primary" />
                @Html.ActionLink("Trở về", "ProfileNV", "LoginNhanVien", null, new { @class = "btn btn-secondary ml-2" })
            </div>
        </div>
    </div>
}

<style>
    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
            color: white;
        }
</style>